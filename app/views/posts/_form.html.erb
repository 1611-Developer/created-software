<div class="flex items-start justify-center min-h-screen dark:bg-black">
  <div class="w-full max-w-lg p-8 rounded-lg shadow-lg dark:bg-black mt-12 bg-gray-50">
    <h2 class="mb-8 text-3xl font-bold text-center text-gray-900 dark:text-white">
      <%= post.new_record? ? 'New Project' : 'Edit Project' %>
    </h2>

    <%= form_with(model: post, local: true) do |form| %>
      <% if post.errors.any? %>
        <div id="error_explanation" class="mb-6 bg-red-50 border border-red-100 text-red-600 px-4 py-3 rounded">
          <h3 class="font-semibold mb-2">
            <%= pluralize(post.errors.count, "error") %> prohibited this project from being saved:
          </h3>
          <ul class="list-disc pl-5 space-y-1 text-red-700 text-sm">
            <% post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= form.label :title, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= form.text_field :title,
          class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 dark:text-white #{post.errors[:title].any? ? 'border-red-400 focus:ring-red-500' : 'border-gray-300 focus:ring-blue-500'}" %>
      </div>

      <div class="mb-6">
        <%= form.label :description, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= form.text_area :description, rows: 8,
          class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 dark:text-white #{post.errors[:description].any? ? 'border-red-400 focus:ring-red-500' : 'border-gray-300 focus:ring-blue-500'}" %>
      </div>

      <div class="mb-6">
        <%= form.label :repo_link, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= form.text_field :repo_link,
          class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 dark:text-white #{post.errors[:repo_link].any? ? 'border-red-400 focus:ring-red-500' : 'border-gray-300 focus:ring-blue-500'}" %>
      </div>

      <div class="mb-6">
        <%= form.label :demo_link, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= form.text_field :demo_link,
          class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 dark:text-white #{post.errors[:demo_link].any? ? 'border-red-400 focus:ring-red-500' : 'border-gray-300 focus:ring-blue-500'}" %>
      </div>

      <div class="mb-4">
        <%= form.label :screenshot, "Project Screenshot", class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>

        <label for="post_screenshot" class="inline-block cursor-pointer px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 shadow">
          Select Screenshot
        </label>

        <%= form.file_field :screenshot, accept: "image/*", class: "hidden", id: "post_screenshot" %>

        <!-- Upload status text -->
        <p id="upload-status" class="mt-2 text-gray-700 dark:text-white">
          <% if post.screenshot.attached? %>
            Uploaded file: <%= post.screenshot.filename.to_s %>
          <% else %>
            No image uploaded
          <% end %>
        </p>

        <p id="uploaded-message" class="hidden mt-2 text-green-600 font-semibold">
          Screenshot uploaded.
        </p>
      </div>

      <div class="field">
        <%= form.label :is_public, "Make this post public", class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= form.check_box :is_public %>
      </div>

      <div>
        <%= form.submit post.new_record? ? "Create Post" : "Update Post",
          class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener("turbo:load", () => {
    const fileInput = document.getElementById("post_screenshot");
    const uploadStatus = document.getElementById("upload-status");
    const uploadedMessage = document.getElementById("uploaded-message");

    if (!fileInput) return;

    fileInput.addEventListener("change", () => {
      if (fileInput.files.length > 0) {
        uploadStatus.style.display = "none";
        uploadedMessage.style.display = "block";
      } else {
        uploadStatus.style.display = "block";
        uploadedMessage.style.display = "none";
      }
    });
  });
</script>
