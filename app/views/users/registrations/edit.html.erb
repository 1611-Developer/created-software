<main class="flex items-start justify-center min-h-screen bg-gray-100 dark:bg-black">
  <% content_for :title, "Account Settings" %>

  <div class="w-full max-w-5xl mx-auto my-10">
    <!-- Page heading sits on page, not in a card -->
    <div class="mb-10">
      <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight text-center dark:text-white">
        Account Settings
      </h1>
    </div>

    <div class="p-0">
      <div class="flex flex-col items-center gap-4">
        <%= link_to "Change Name", edit_user_name_path,
          class: "px-2 py-4 bg-blue-600 hover:bg-blue-500 text-white font-semibold transition rounded text-2xl font-medium w-1/2 text-center dark:text-white" %>
        <%= link_to "Change Email", edit_user_email_path,
          class: "px-2 py-4 bg-blue-600 hover:bg-blue-500 text-white font-semibold transition rounded text-2xl font-medium w-1/2 text-center dark:text-white" %>
        <%= link_to "Change Password", edit_user_password_custom_path,
          class: "px-2 py-4 bg-blue-600 hover:bg-blue-500 text-white font-semibold transition rounded text-2xl font-medium w-1/2 text-center dark:text-white" %>

        <!-- Delete Account Button triggers modal -->
        <div class="w-1/2 mx-auto">
          <button
            type="button"
            onclick="openDeleteAccountModal()"
            class="w-full px-2 py-4 bg-blue-600 hover:bg-blue-500 text-white font-semibold transition rounded text-2xl font-medium text-center dark:text-white"
          >
            Delete Account
          </button>
        </div>
      </div>
    </div>
  </div>
</main>

<!-- Delete Account Confirmation Modal -->
<div id="deleteAccountModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 hidden">
  <div class="bg-white dark:bg-gray-900 rounded-lg shadow-xl w-full max-w-md p-8 mx-2">
    <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4">Delete Account</h2>
    <p class="mb-6 text-gray-600 dark:text-gray-200">
      Are you sure you want to permanently delete your account? This action cannot be undone.
      <br />
      Please type <strong>delete account</strong> to confirm.
    </p>

    <input
      id="delete-account-confirm-input"
      type="text"
      placeholder="Type 'delete account' here"
      class="w-full border border-gray-300 dark:bg-gray-800 dark:text-white rounded px-3 py-2 mb-6 focus:outline-none focus:ring-2 focus:ring-red-500"
    />

    <div class="flex gap-3 justify-end">
      <button
        type="button"
        onclick="closeDeleteAccountModal()"
        class="px-4 py-2 rounded bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-700"
      >
        Cancel
      </button>

      <!-- Use a normal form instead of button_to so it lives inside the modal -->
      <form id="delete-account-form" method="post" action="<%= registration_path(resource_name) %>" class="inline">
        <input type="hidden" name="_method" value="delete" />
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <button
          id="confirm-delete-account-btn"
          type="submit"
          disabled
          class="px-4 py-2 rounded bg-red-600 text-white font-semibold hover:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed transition"
        >
          Delete Account
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  function openDeleteAccountModal() {
    const modal = document.getElementById("deleteAccountModal");
    const input = document.getElementById("delete-account-confirm-input");
    const deleteBtn = document.getElementById("confirm-delete-account-btn");

    modal.classList.remove("hidden");
    input.value = "";
    deleteBtn.disabled = true;
    input.focus();

    input.replaceWith(input.cloneNode(true));
    const newInput = document.getElementById("delete-account-confirm-input");

    newInput.addEventListener("input", () => {
      deleteBtn.disabled = (newInput.value.trim().toLowerCase() !== "delete account");
    });
  }

  function closeDeleteAccountModal() {
    document.getElementById("deleteAccountModal").classList.add("hidden");
  }
</script>

