<div class="flex items-start justify-center min-h-screen bg-gray-50 dark:bg-black">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md dark:bg-black mt-12">
    <h2 class="mb-8 text-3xl font-bold text-center text-gray-900 dark:text-white">
      Edit Email
    </h2>

    <%= form_for(resource, as: resource_name, url: update_user_email_path, html: { method: :patch, local: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-sm text-yellow-700 dark:text-white">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :current_password, "Current Password", class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full mt-1 px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
        <i class="block mt-1 text-xs text-gray-500 dark:text-white">Required to confirm changes</i>
      </div>

      <div>
        <%= f.submit "Update Email", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
