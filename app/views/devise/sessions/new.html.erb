<div class="flex items-start justify-center min-h-screen bg-gray-50 dark:bg-black">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md dark:bg-black dark:text-white mt-16">
    <h2 class="mb-8 text-3xl font-bold text-center text-gray-900 dark:text-white">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600 dark:text-white" %>
        </div>
      <% end %>
      <div class="mb-6">
        <%= f.submit "Login", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded font-semibold transition-colors" %>
      </div>
    <% end %>

    <div class="text-center text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

