<div class="flex items-start justify-center min-h-screen bg-gray-50 dark:bg-black">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md mt-16 dark:bg-black">
    <h2 class="mb-8 text-3xl font-bold text-center text-gray-900 dark:text-white">
      Change your password
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "New password", class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-400 dark:text-white">
            (<%= @minimum_password_length %> characters minimum)
          </em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full mt-1 px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "Confirm new password", class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Change my password", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded font-semibold transition-colors" %>
      </div>
    <% end %>

    <div class="flex justify-center gap-4 text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

