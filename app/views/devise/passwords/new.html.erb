<div class="flex items-start justify-center min-h-screen bg-gray-50 dark:bg-black dark:text-white">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md dark:bg-black mt-16">
    <h2 class="mb-8 text-3xl font-bold text-center text-gray-900 dark:bg-black dark:text-white">
      Forgot your password?
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Send me reset password instructions", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

