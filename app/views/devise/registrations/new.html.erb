<div class="flex items-start justify-center min-h-screen bg-gray-50 dark:bg-black dark:text-white">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md dark:bg-black dark:text-white mt-16">
    <h2 class="mb-8 text-3xl font-bold text-center text-gray-900 dark:text-white">Signup</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :first_name, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>                                       
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :user_name, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user name", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-white" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block mb-1 text-sm font-medium text-gray-700 dark:text-white" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.check_box :agree_to_terms, required: true %>
        <%= f.label :agree_to_terms, "I agree to the Terms and Conditions" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Signup", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded font-semibold transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

