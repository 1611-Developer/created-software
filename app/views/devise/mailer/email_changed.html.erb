<div class="flex items-center justify-center min-h-screen bg-gray-50">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md text-center">
    <p class="mb-4 text-2xl font-bold text-gray-800">
      Hello <%= @email %>!
    </p>

    <% if @resource.try(:unconfirmed_email?) %>
      <p class="text-gray-700">
        We're contacting you to notify you that your email is being changed to
        <span class="font-semibold text-blue-700"><%= @resource.unconfirmed_email %></span>.
      </p>
    <% else %>
      <p class="text-gray-700">
        We're contacting you to notify you that your email has been changed to
        <span class="font-semibold text-blue-700"><%= @resource.email %></span>.
      </p>
    <% end %>
  </div>
</div>

