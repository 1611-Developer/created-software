<div class="w-full max-w-md mx-auto flex flex-wrap justify-center gap-3">
  <% if controller_name != 'sessions' %>
    <%= link_to "Login", new_session_path(resource_name),
      class: "inline-block w-full px-4 py-2 rounded bg-gray-200 hover:bg-blue-100 text-blue-700 font-semibold transition-colors" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Signup", new_registration_path(resource_name),
      class: "inline-block w-full px-4 py-2 rounded bg-gray-200 hover:bg-blue-100 text-blue-700 font-semibold transition-colors" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name),
      class: "inline-block w-full px-4 py-2 rounded bg-gray-200 hover:bg-blue-100 text-blue-700 font-semibold transition-colors" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),
      class: "inline-block w-full px-4 py-2 rounded bg-gray-200 hover:bg-blue-100 text-blue-700 font-medium transition-colors" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),
      class: "inline-block w-full px-4 py-2 rounded bg-gray-200 hover:bg-blue-100 text-blue-700 font-medium transition-colors" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Signin with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),
        data: { turbo: false },
        class: "inline-block w-full px-4 py-2 rounded bg-gray-100 hover:bg-blue-200 text-blue-800 font-medium transition-colors" %>
    <% end %>
  <% end %>
</div>

