<!-- HERO SECTION WITH ANIMATED WAVES -->
<section class="relative flex flex-col items-center justify-center min-h-[80vh] text-center overflow-hidden">
  <!-- Blue background -->
  <div class="absolute inset-0 bg-[#3586ff]"></div>

  <!-- Animated waves -->
  <div class="air air1"></div>
  <div class="air air2"></div>
  <div class="air air3"></div>
  <div class="air air4"></div>

  <!-- Hero content -->
  <div class="relative z-[1001] px-4">
    <h1 class="mb-4 text-4xl font-extrabold md:text-6xl text-white">
      Where coding projects live 
      <span class="gradient-stroke-wrapper">
        <span class="gradient-text-stroke">beautifully</span>
        <span class="gradient-text-fill">beautifully</span>
      </span>

    </h1>
    <h2 class="mb-8 text-2xl md:text-3xl text-blue-100">
      Designed for developers who care about how their work is seen and shared.
    </h2>

    <%= link_to 'Get Started', new_user_registration_path,
        class: "inline-block px-8 py-3 text-white bg-blue-600 rounded-lg text-lg font-bold hover:bg-blue-700 shadow-xl" %>
  </div>
</section>


<!-- MASONRY POSTS SECTION -->
<section class="max-w-5xl mx-auto mt-10 pb-10 px-4">
  <div class="flex items-center justify-center gap-8">
    <div class="arrow-wrapper">
      <div class="animated-arrow border-gray-900 dark:border-white"></div>
    </div>

    <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white text-center">
      Checkout some great builds
    </h2>

    <div class="arrow-wrapper">
      <div class="animated-arrow border-gray-900 dark:border-white"></div>
    </div>
  </div>

  <div class="columns-1 sm:columns-2 md:columns-3 gap-6 space-y-6 mt-8">
    <% @public_posts.each do |post| %>
      <div class="break-inside-avoid bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-6">
        <h3 class="text-xl font-bold mb-2 dark:text-white text-gray-900"><%= post.title %></h3>
        <p class="mb-2 text-gray-700 dark:text-white"><%= truncate(post.description, length: 120) %></p>
        <div class="text-sm text-gray-500 mb-2 dark:text-gray-200">
          By
          <%= link_to post.user.user_name.capitalize, profile_by_username_path(post.user.user_name),
              class: "text-blue-600 dark:text-blue-300 hover:underline font-semibold" %>
          â€¢ <%= post.created_at.strftime('%b %d, %Y') %>
        </div>
        <%= link_to "View Project",
            user_post_path(user_name: post.user.user_name, slug: post.slug),
            class: "inline-block mt-2 px-3 py-1 bg-blue-100 rounded text-blue-700 hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-300 dark:hover:bg-blue-800 font-medium" %>
      </div>
    <% end %>
  </div>
</section>
